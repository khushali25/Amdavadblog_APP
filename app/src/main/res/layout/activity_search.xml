<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:components="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearsearch"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:weightSum="3">
            <android.support.v7.widget.Toolbar
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:id="@+id/toolbarSearch"
                app:collapseIcon="@drawable/ic_search_black_24dp"
                android:background="@drawable/gradient_colors"/>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout xmlns:local="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <com.alexvasilkov.foldablelayout.FoldableListLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/foldable_list_search"
                android:scrollbarFadeDuration="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Helper.GifView
                android:id="@+id/loading"
                android:layout_width="230dp"
                android:layout_height="250dp"
                components:src="@drawable/loadinggif"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:visibility="gone"
                android:id="@+id/txtnodatafound"
                android:text="No Result Found" />
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentStart="true">-->

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            local:adSize="BANNER"
            android:layout_gravity="center|bottom"
            android:layout_alignParentBottom="true"
            local:adUnitId="ca-app-pub-1870433400625480/7574195045" />
    <!--</LinearLayout>-->
</LinearLayout>